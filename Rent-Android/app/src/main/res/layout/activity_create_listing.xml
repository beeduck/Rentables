<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/create_listing_content_1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_activity_title"
                    android:text="@string/create_listing_activity_title_string"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/rentColorPrimaryDark"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_title_edit_text"
                    android:hint="@string/create_listing_title_hint_string"
                    android:inputType="textShortMessage"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_title_text_view"
                    android:text="@string/create_listing_title_string"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_description_edit_text"
                    android:hint="@string/create_listing_description_hint_string"
                    android:layout_marginTop="15dp"
                    android:inputType="textMultiLine"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_description_text_view"
                    android:text="@string/create_listing_description_string"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_dollar"
                        android:textSize="20sp"
                        android:textColor="@color/rentColorPrimaryDark" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/create_listing_price_edit_text"
                        android:hint="@string/create_listing_price_hint_string"
                        android:inputType="numberDecimal"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_per"
                        android:textSize="20sp"
                        android:layout_marginStart="15dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/create_listing_per_spinner"
                        android:layout_marginStart="15dp"
                        android:paddingTop="1dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_listing_per_text_view_string"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_listing_additional_details_edit_text"
                    android:hint="@string/create_listing_additional_details_hint"
                    android:layout_marginTop="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_listing_additional_details_string"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/create_listing_button_string"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:onClick="createListing"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>